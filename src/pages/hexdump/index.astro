	// ÂèåÊñπÂêëÂêåÊúüÁî®„ÅÆ„Ç™„Éï„Çª„ÉÉ„ÉàÂ§âÊèõÈñ¢Êï∞
	function hexDumpOffsetToCanvasOffset(hexOffset: number): number {
		// HexDump„Ç™„Éï„Çª„ÉÉ„ÉàÔºà16„Éê„Ç§„ÉàÂ¢ÉÁïåÔºâ„ÇíCanvas‰∏≠ÂøÉ‰ΩçÁΩÆÔºà256„Éê„Ç§„ÉàÂ¢ÉÁïåÔºâ„Å´Â§âÊèõ
		// Canvas„ÅÆ‰∏≠Â§Æ„Å´HexDump„ÅÆ‰ΩçÁΩÆ„ÅåÊù•„Çã„Çà„ÅÜ„Å´Ë™øÊï¥
		const canvasHalfHeight = CANVAS_LINES_TO_DISPLAY / 2;
		const targetCanvasLine = Math.floor(hexOffset / CANVAS_BYTES_PER_LINE);
		const centeredCanvasOffset = Math.max(0, (targetCanvasLine - canvasHalfHeight)) * CANVAS_BYTES_PER_LINE;
		return Math.floor(centeredCanvasOffset / CANVAS_BYTES_PER_LINE) * CANVAS_BYTES_PER_LINE;
	}

	function canvasOffsetToHexDumpOffset(canvasOffset: number): number {
		// Canvas„Ç™„Éï„Çª„ÉÉ„Éà„ÇíHexDump„Ç™„Éï„Çª„ÉÉ„ÉàÔºà16„Éê„Ç§„ÉàÂ¢ÉÁïåÔºâ„Å´Â§âÊèõ
		// Canvas„ÅÆÂÖàÈ†≠Ë°å„Å´ÂØæÂøú„Åô„ÇãHexDump„Ç™„Éï„Çª„ÉÉ„Éà
		return Math.floor(canvasOffset / BYTES_PER_LINE) * BYTES_PER_LINE;
	}


	function formatFileSize(bytes: number): string {
		if (bytes === 0) return "0 Bytes";
		const k = 1024;
		const sizes = ["Bytes", "KB", "MB", "GB"];
		const i = Math.floor(Math.log(bytes) / Math.log(k));
		return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + " " + sizes[i];
	}

	// „Éë„Éï„Ç©„Éº„Éû„É≥„ÇπÂêë‰∏ä„ÅÆ„Åü„ÇÅ„ÅÆ16ÈÄ≤Êï∞Â§âÊèõ„ÉÜ„Éº„Éñ„É´
	// 0x00-0xFF (0-255) „ÅÆÂÖ®„Å¶„ÅÆ„Éê„Ç§„ÉàÂÄ§„Çí‰∫ãÂâç„Å´16ÈÄ≤Êï∞ÊñáÂ≠óÂàó„Å´Â§âÊèõ
	const HEX_TABLE = Array.from({ length: 256 }, (_, i) => 
		i.toString(16).padStart(2, "0").toUpperCase()
	);

	// HTMLÂèÇÁÖßÊñáÂ≠óÂåñ„ÉÜ„Éº„Éñ„É´Ôºà„Çª„Ç≠„É•„É™„ÉÜ„Ç£Âº∑ÂåñÔºâ
	// HTML„Ç§„É≥„Ç∏„Çß„ÇØ„Ç∑„Éß„É≥ÊîªÊíÉ„ÇíÈò≤„Åê„Åü„ÇÅ„ÄÅÁâπÊÆäÊñáÂ≠ó„ÇíÂèÇÁÖßÊñáÂ≠ó„Åß„Ç®„Çπ„Ç±„Éº„Éó
	const CHAR_TABLE = (() => {
		const table = new Array(256);
		for (let i = 0; i < 256; i++) {
			if (i >= 0x20 && i <= 0x7e) {
				// Âç∞Â≠óÂèØËÉΩASCIIÊñáÂ≠ó„Å†„Åå„ÄÅHTML„ÅÆÁâπÊÆäÊñáÂ≠ó„ÅØ„Ç®„Çπ„Ç±„Éº„Éó
				switch (i) {
					case 0x3C: // < (less than)
						table[i] = "&lt;";
						break;
					case 0x3E: // > (greater than)
						table[i] = "&gt;";
						break;
					case 0x26: // & (ampersand)
						table[i] = "&amp;";
						break;
					case 0x22: // " (double quote)
						table[i] = "&quot;";
						break;
					case 0x27: // ' (single quote)
						table[i] = "&#x27;";
						break;
					default:
						table[i] = String.fromCharCode(i);
				}
			} else {
				// ÈùûÂç∞Â≠óÊñáÂ≠ó„ÅØÂÖ®„Å¶ . (dot) „ÅßË°®Á§∫
				table[i] = ".";
			}
		}
		return table;
	})();

	function byteToHex(byte: number): string {
		return HEX_TABLE[byte];
	}

	function byteToChar(byte: number): string {
		return CHAR_TABLE[byte];
	}


	function getByteColorRGB(byte: number): {
		r: number;
		g: number;
		b: number;
	} {
		if (byte === 0x00) return { r: 255, g: 255, b: 255 }; // ÁôΩ
		if (byte >= 0x01 && byte <= 0x1f) return { r: 0, g: 255, b: 255 }; // Ê∞¥Ëâ≤
		if (byte >= 0x20 && byte <= 0x7e) return { r: 255, g: 0, b: 0 }; // Ëµ§
		return { r: 0, g: 0, b: 0 }; // Èªí
	}


	async function loadChunk(
		offset: number,
		size: number,
	): Promise<ArrayBuffer | null> {
		if (!currentFile) return null;

		const start = Math.max(0, offset);
		const end = Math.min(currentFile.size, offset + size);

		if (start >= end) return null;

		try {
			const slice = currentFile.slice(start, end);
			return await slice.arrayBuffer();
		} catch (error) {
			console.error("Error loading chunk:", error);
			return null;
		}
	}

