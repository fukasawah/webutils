	function handleWheelScroll(event: WheelEvent): void {
		if (!currentFile || isSearching) return;

		event.preventDefault();

		const scrollLines = 3; // ‰∏ÄÂ∫¶„Å´„Çπ„ÇØ„É≠„Éº„É´„Åô„ÇãË°åÊï∞
