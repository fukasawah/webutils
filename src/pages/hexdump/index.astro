		const bytesPerCanvasLine = CANVAS_BYTES_PER_LINE;
		const byteIndex = canvasY * bytesPerCanvasLine + canvasX;

		// ÁèæÂú®„ÅÆCanvasË°®Á§∫„Ç™„Éï„Çª„ÉÉ„Éà„ÇíËÄÉÊÖÆ„Åó„Å¶„Éï„Ç°„Ç§„É´ÂÜÖ„Ç™„Éï„Çª„ÉÉ„Éà„ÇíË®àÁÆó
