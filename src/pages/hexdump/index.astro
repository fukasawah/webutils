	// Worker„Åã„Çâ„ÅÆ„É°„ÉÉ„Çª„Éº„Ç∏„ÇíÂá¶ÁêÜ
	function handleWorkerMessage(event: MessageEvent): void {
		const data = event.data;
		const type = data.type;
		
		switch (type) {
			case 'progress':
				// Êé®ÂÆöÊÆã„ÇäÊôÇÈñì„ÇíÂàÜ„Åã„Çä„ÇÑ„Åô„ÅèË°®Á§∫
				const remainingSeconds = Math.ceil(data.estimatedRemainingMs / 1000);
				let timeText = '';
				
				if (remainingSeconds < 60) {
					timeText = `~${remainingSeconds}s`;
				} else if (remainingSeconds < 3600) {
					const minutes = Math.ceil(remainingSeconds / 60);
					timeText = `~${minutes}m`;
				} else {
					const hours = Math.floor(remainingSeconds / 3600);
					const minutes = Math.ceil((remainingSeconds % 3600) / 60);
					timeText = `~${hours}h${minutes}m`;
				}
				
				statusMessage.textContent = `Searching... ${data.progress.toFixed(1)}% (${timeText} remaining)`;
				break;
				
			case 'found':
				// Ê§úÁ¥¢ÊàêÂäü
				searchResultOffset = data.offset;
				statusMessage.textContent = `Found at offset 0x${data.offset.toString(16).toUpperCase()}`;
				statusMessage.classList.remove('loading');
				statusMessage.classList.add('success');
				
				// ÁµêÊûú„ÅÆ‰ΩçÁΩÆ„Å´„Ç∏„É£„É≥„Éó„Åó„Å¶„Åã„ÇâfinishSearch„ÇíÂëº„Å∂
				jumpToOffset(data.offset);
				
				// Ê§úÁ¥¢Áä∂ÊÖã„Çí„ÇØ„É™„Ç¢Ôºà„Éè„Ç§„É©„Ç§„Éà„ÅØÊÆã„ÅôÔºâ
				isSearching = false;
				updateSearchButtonState();
				
				// 3ÁßíÂæå„Å´„Çπ„ÉÜ„Éº„Çø„Çπ„Çí„É™„Çª„ÉÉ„Éà
				setTimeout(() => {
					statusMessage.textContent = 'Ready';
					statusMessage.classList.remove('success', 'warning', 'error');
				}, 3000);
				break;
				
			case 'not_found':
				// Ë¶ã„Å§„Åã„Çâ„Å™„Åã„Å£„Åü
				statusMessage.textContent = 'Pattern not found';
				statusMessage.classList.remove('loading');
				statusMessage.classList.add('warning');
				finishSearch();
				break;
				
			case 'cancelled':
				// Ê§úÁ¥¢„Ç≠„É£„É≥„Çª„É´
				statusMessage.textContent = 'Search cancelled';
				statusMessage.classList.remove('loading');
				finishSearch();
				break;
				
			default:
				console.warn('Unknown worker message type:', type);
		}
	}


	// Ê§úÁ¥¢ÂÆå‰∫ÜÂá¶ÁêÜ
	function finishSearch(): void {
		isSearching = false;
		updateSearchButtonState();
		
		// 3ÁßíÂæå„Å´„Çπ„ÉÜ„Éº„Çø„Çπ„Çí„É™„Çª„ÉÉ„Éà
		setTimeout(() => {
			statusMessage.textContent = 'Ready';
			statusMessage.classList.remove('success', 'warning', 'error');
		}, 3000);
	}

	// ÂàùÊúüÂåñÊôÇ„Å´Worker„Çí‰ΩúÊàê
	initializeSearchWorker();


	// Ê§úÁ¥¢ÂÆüË°åÈñ¢Êï∞ÔºàWeb Worker„Éô„Éº„ÇπÔºâ
	async function executeSearch(): Promise<void> {
		const input = searchInput.value.trim();
		const mode = getCurrentSearchMode();
		
		if (!input || !currentFile || !searchWorker) {
			return;
		}

		// Ê§úÁ¥¢„Éë„Çø„Éº„É≥„ÇíÂ§âÊèõ
		const pattern = convertToBytePattern(input, mode);
		if (!pattern) {
			statusMessage.textContent = 'Invalid search pattern';
			statusMessage.classList.add('error');
			setTimeout(() => {
				statusMessage.textContent = 'Ready';
				statusMessage.classList.remove('error');
			}, 3000);
			return;
		}

		// ÂâçÂõû„ÅÆÊ§úÁ¥¢ÁµêÊûú„Çí„ÇØ„É™„Ç¢ÔºàÊñ∞„Åó„ÅÑÊ§úÁ¥¢ÈñãÂßãÊôÇ„ÅÆ„ÅøÔºâ
		searchResultOffset = -1;
		
		// Ê§úÁ¥¢Áä∂ÊÖã„ÇíË®≠ÂÆö
		isSearching = true;
		searchPattern = pattern;
		
		// UIÁä∂ÊÖã„ÇíÊõ¥Êñ∞
		updateSearchButtonState();
		statusMessage.textContent = 'Searching...';
		statusMessage.classList.add('loading');
		
		// Ë°®Á§∫„ÇíÊõ¥Êñ∞„Åó„Å¶„Éè„Ç§„É©„Ç§„Éà„Çí„ÇØ„É™„Ç¢
		updateDisplay();

		// Web Worker„Å´Ê§úÁ¥¢„Çí‰æùÈ†ºÔºà„Éï„Ç°„Ç§„É´„Ç™„Éñ„Ç∏„Çß„ÇØ„ÉàÂê´„ÇÄÔºâ
		searchWorker.postMessage({
			type: 'search',
			data: {
				file: currentFile, // „Éï„Ç°„Ç§„É´„Ç™„Éñ„Ç∏„Çß„ÇØ„Éà„ÇíÁõ¥Êé•ÈÄÅ‰ø°
				pattern: Array.from(pattern), // Uint8Array„ÇíÈÖçÂàó„Å´Â§âÊèõ
				startOffset: currentOffset,
				chunkSize: 4 * 1024 * 1024 // 4MB chunksÔºàI/OÂäπÁéáÂêë‰∏äÔºâ
			}
		});
	}

	// Ê§úÁ¥¢ÂÅúÊ≠¢Èñ¢Êï∞ÔºàWeb Worker„Éô„Éº„ÇπÔºâ
	function stopSearch(): void {
		if (searchWorker && isSearching) {
			searchWorker.postMessage({
				type: 'cancel'
			});
		}
	}

	// „Ç™„Éï„Çª„ÉÉ„Éà„Å´„Ç∏„É£„É≥„Éó„Åô„ÇãÈñ¢Êï∞
	function jumpToOffset(targetOffset: number): void {
		const maxOffset = getMaxOffset();
		const clampedOffset = Math.min(targetOffset, maxOffset);
		const alignedOffset = Math.floor(clampedOffset / BYTES_PER_LINE) * BYTES_PER_LINE;
		
		currentOffset = alignedOffset;
		lastUpdateOffset = -1; // „Ç≠„É£„ÉÉ„Ç∑„É•„É™„Çª„ÉÉ„Éà
		updateDisplay();
	}

	// Ê§úÁ¥¢„Éà„Ç∞„É´„Éú„Çø„É≥„ÅÆ„Ç§„Éô„É≥„Éà„É™„Çπ„Éä„Éº
	searchToggleBtn.addEventListener('click', () => {
		if (isSearching) {
			stopSearch();
		} else {
			executeSearch();
		}
	});

	// Enter„Ç≠„Éº„Åß„ÅÆÊ§úÁ¥¢ÂÆüË°å
	searchInput.addEventListener('keydown', (event) => {
		if (event.key === 'Enter' && !searchToggleBtn.disabled) {
			if (isSearching) {
				stopSearch();
			} else {
				executeSearch();
			}
		}
	});

</script>