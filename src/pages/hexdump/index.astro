	let CANVAS_CHUNK_SIZE = CANVAS_LINES_TO_DISPLAY * CANVAS_BYTES_PER_LINE; // CanvasÁî®„ÉÅ„É£„É≥„ÇØ„Çµ„Ç§„Ç∫
	
