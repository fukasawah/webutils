		const targetOffset = Math.floor(fileByteOffset / BYTES_PER_LINE) * BYTES_PER_LINE;

		// ÊúÄÂ§ß„Ç™„Éï„Çª„ÉÉ„ÉàÂÜÖ„Å´Âà∂Èôê
		const maxOffset = getMaxOffset();
