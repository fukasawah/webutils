---
import Layout from '../layouts/Layout.astro';
import ToolCard from '../components/common/ToolCard.astro';

const tools = [
	{
		href: '/password-generator/',
		icon: 'üîê',
		title: 'Password Generator',
		description: 'Generate secure passwords with customizable options',
		features: ['Multiple passwords', 'Cryptographically secure', 'Custom character sets']
	},
	{
		href: '/hexdump/',
		icon: 'üìä',
		title: 'Hex Dump Tool',
		description: 'Binary file analysis with hexdump display and visualization',
		features: ['Visual representation', 'Color-coded bytes', 'Virtual scrolling']
	},
	{
		href: '/hash-calculator/',
		icon: 'üîê',
		title: 'Hash Calculator',
		description: 'Calculate hash values from text or files using various algorithms',
		features: ['SHA-1, SHA-256, SHA-384, SHA-512', 'Text and file input', 'Hex output format']
	},
	{
		href: '/qr-generator/',
		icon: 'üîó',
		title: 'QR Code Generator',
		description: 'Generate QR codes from text, URLs, or any data with customizable options',
		features: ['Multiple sizes', 'Error correction levels', 'Download & copy support']
	}
];
---

<Layout title="Web Toolbox - Security & Development Tools">
	<div class="home-container">
		<div class="home-header">
			<h1>üõ†Ô∏è Web Toolbox</h1>
			<p class="home-subtitle">Powerful security and development tools for professionals</p>
		</div>

		<div class="tools-grid">
			{tools.map((tool, index) => (
				<ToolCard 
					href={tool.href}
					icon={tool.icon}
					title={tool.title}
					description={tool.description}
					features={tool.features}
					class={`tool-card-${index + 1}`}
				/>
			))}
		</div>

		<div class="home-footer">
			<p>Built with Astro ‚Ä¢ Secure by design ‚Ä¢ Desktop optimized</p>
		</div>
	</div>
</Layout>

<style>
	.home-container {
		max-width: 1000px;
		margin: 0 auto;
		padding: 4rem 2rem;
		min-height: 100vh;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		text-align: center;
	}

	.home-header {
		margin-bottom: 4rem;
	}

	.home-header h1 {
		font-size: 3.5rem;
		margin-bottom: 1rem;
		background: linear-gradient(135deg, var(--text-primary), var(--text-accent));
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.home-subtitle {
		font-size: 1.25rem;
		color: var(--text-secondary);
		margin: 0;
	}

	.tools-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
		gap: 2rem;
		width: 100%;
		max-width: 800px;
		margin-bottom: 4rem;
	}

	/* Tool card animation delays */
	.tool-card-1 {
		animation-delay: 0.1s;
	}

	.tool-card-2 {
		animation-delay: 0.2s;
	}

	.tool-card-3 {
		animation-delay: 0.3s;
	}

	.tool-card-4 {
		animation-delay: 0.4s;
	}

	.home-footer {
		margin-top: auto;
	}

	.home-footer p {
		color: var(--text-muted);
		font-size: 0.875rem;
		margin: 0;
	}

	/* Animation */
	.home-header {
		animation: fadeIn 0.8s ease-out;
	}

	.home-footer {
		animation: fadeIn 1s ease-out;
	}
</style>
